<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".DetalleAlojamiento">

    <LinearLayout
        android:id="@+id/linerlayoutbotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:tooltipText="Buscar"
            android:backgroundTint="@color/colorDark"
            app:srcCompat="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tooltipText="Inicio"
            android:backgroundTint="@color/colorDark"
            app:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btnuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tooltipText="Usuario"
            android:backgroundTint="@color/colorDark"
            app:srcCompat="@drawable/ic_user" />

        <ImageButton
            android:id="@+id/btninfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tooltipText="InformaciÃ³n"
            android:backgroundTint="@color/colorDark"
            app:srcCompat="@drawable/ic_info" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:layout_gravity="center">

    </ViewFlipper>

    <TextView
        android:id="@+id/descripsion2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/hubicacion2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/condiciones2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/banos2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/camas2"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/habitaciones2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/huespedes2"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/precio2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/servicio2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnreservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar" />


</LinearLayout>