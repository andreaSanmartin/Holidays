<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".DetalleAlojamiento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Codigo de Reserva:"
            android:textColor="#070000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtVID"
            android:layout_width="188dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:hint="ID"
            android:textColor="#030B3A"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#3295D0D5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fecha Inicial"
            android:textColor="#000105" />

        <TextView
            android:id="@+id/txtVFInicio"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:hint="Fecha Inicial"
            android:textColor="#1B1868"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fecha Final:"
            android:textColor="#050000" />

        <TextView
            android:id="@+id/txtVFFin"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:hint="Fecha Final"
            android:textColor="#151E6A"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#3295D0D5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="N. de Días:"
            android:textColor="#090000" />

        <TextView
            android:id="@+id/txtNDias"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Nu. de Días"
            android:textColor="#212A5C" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="121dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Precio:"
            android:textColor="#0C0000" />

        <TextView
            android:id="@+id/txtVTotal"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#00202A63"
            android:foregroundTint="#1F2757"
            android:hint="Precio ejemplo 15.80"
            android:textColor="#202A65" />

    </LinearLayout>

    <Button
        android:id="@+id/btnReservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="RESERVAR"
        android:textColor="#0E0000"
        android:textSize="18sp" />

</LinearLayout>